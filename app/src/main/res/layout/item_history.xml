<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:padding="@dimen/_5sdp"
        android:text="Thời gian"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintLeft_toRightOf="@id/tvTotalPriceCake"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:id="@+id/tvQuantityHistory"
        android:textSize="@dimen/_16sdp"
        android:text="Số lượng bánh"/>
    <TextView
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantityHistory"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvTotalPriceCake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000000"

        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />
    <View
        android:background="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalPriceCake"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>